<div class="container pt-4 col-4">
  <h1>Edit Item</h1>
  <%= simple_form_for @item do |f| %>
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.input :price %>
    <%= f.input :location %>
    <%= f.input  :photos, as: :file, input_html: { multiple: true } %>
    <%= f.input :category, collection: Item::CATEGORIES %>
    <%= f.submit class: 'btn btn-success text-white' %>
  <% end %>

  <br>

</div>
