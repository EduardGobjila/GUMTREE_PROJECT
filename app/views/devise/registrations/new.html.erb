<div class = "banner-new" style="background-image: linear-gradient(rgba(0,0,0,0.2),rgba(0,0,0,0.2)), url(https://images.unsplash.com/photo-1598928506311-c55ded91a20c?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=870&q=80);">
<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), data: {turbo: false}) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs container pt-4 col-4">
    <h2>Sign up</h2>
    <%= f.input :email,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "email" }%>
    <%= f.input :username,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "username" }%>
    <%= f.input :location,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "location" }%>
    <%= f.input :phone,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "phone" }%>
    <%= f.input :password,
                required: true,
                hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                input_html: { autocomplete: "new-password" } %>
    <%= f.input :password_confirmation,
                required: true,
                input_html: { autocomplete: "new-password" } %>

  <div class="form-actions">
    <%= f.button :submit, "Sign up", class: 'btn btn-primary text-white category-button my-2' %>
  </div>
    <%= render "devise/shared/links" %>
  </div>
<% end %>
